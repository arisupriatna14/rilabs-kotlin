<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".HomeActivity"
>
  <Button
          android:text="Home Page"
          android:id="@+id/button_back"
          android:layout_weight="1"
          android:layout_centerInParent="false"
          android:layout_centerHorizontal="true"
          android:layout_alignParentBottom="true"
          android:layout_marginBottom="32dp"
          android:layout_width="300dp"
          android:layout_height="60dp"
          android:shadowRadius="10"
          android:background="#006064"
          android:textColor="#ffffff"
          android:textSize="18sp"
  />
  <ImageView
          android:layout_width="100dp"
          android:layout_height="100dp" app:srcCompat="@mipmap/ic_launcher_round" android:id="@+id/imageView2"
          android:layout_centerInParent="true"/>
  <TextView
          android:text="Welcome to Homepage"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" android:id="@+id/textView" android:layout_centerInParent="false"
          android:layout_centerHorizontal="true" android:layout_marginTop="32dp" android:textSize="24sp"
          android:textColor="#000"/>
</RelativeLayout>